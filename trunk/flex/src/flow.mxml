<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
                xmlns:frames="de.ama.framework.gui.frames.*"
                xmlns:views="generated.view.*"
                xmlns:static="static.*"
                layout="vertical" width='100%' height='100%'
                paddingTop='5' paddingLeft='5' paddingRight='5' paddingBottom='5'
                implements="de.ama.framework.gui.frames.FlowApplication">

    <mx:Sequence id="slideOut">
        <mx:Fade alphaFrom="100" alphaTo="0" duration="1000"/>
    </mx:Sequence>
    <mx:Sequence id="slideIn">
        <mx:Fade alphaFrom="0" alphaTo="100" duration="1500"/>
    </mx:Sequence>

    <mx:ViewStack id="mainPanels" width="100%" height="100%" x="0" y="34" creationPolicy="all">
        <static:LoginScreen id="panelLogin" hideEffect="{slideOut}" showEffect="{slideIn}" height="100%" width="100%"/>
        <views:MyApplicationPanel id="app" hideEffect="{slideOut}" showEffect="{slideIn}" height="100%" width="100%"/>
    </mx:ViewStack>

    <mx:Script><![CDATA[
        import de.ama.framework.gui.frames.ApplicationPanel;
        import de.ama.framework.util.Util;

        public function goTo(dest:String):void {

            if (Util.isEqual(dest, "login")) {
                mainPanels.selectedChild = panelLogin;
            }
            else if (Util.isEqual(dest, "application")) {
                mainPanels.selectedChild = app;
            }
        }

        public function getContentPane(): ApplicationPanel {
            return app;
        }

        ]]></mx:Script>

    <mx:Style source="static/styles.css"/>
</mx:Application>
