<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:frames="de.ama.framework.gui.frames.*"
	xmlns:views="generated.view.*"
	xmlns:static="static.*"
    layout="vertical" width='100%' height='100%'
    paddingTop='5' paddingLeft='5' paddingRight='5' paddingBottom='5' 
    initialize="init()" >

    <mx:Sequence id="slideOut" > <mx:Move  xFrom="0" xTo="700" duration="500" />    </mx:Sequence>
    <mx:Sequence id="slideIn" >	<mx:Move  xFrom="700" xTo="0" duration="700" />    </mx:Sequence>
		
    <mx:ViewStack id="mainPanels" width="100%" height="100%" x="0" y="34" creationPolicy="all">
       <static:LoginScreen     id="panelLogin"        hideEffect="{slideOut}" showEffect="{slideIn}" height="100%" width="100%"/>
       <views:Application      id="panelApplication"  hideEffect="{slideOut}" showEffect="{slideIn}" height="100%" width="100%"/>
    </mx:ViewStack>

    <mx:Script><![CDATA[
      import de.ama.framework.util.Util;

      import generated.view.Bootstrap;

      import static.*;

      public function goTo(dest:String):void {
      	
      	    if (Util.isEqual(dest, "login")) {
                mainPanels.selectedChild = panelLogin;
            }
            else if (Util.isEqual(dest, "application")) {
                mainPanels.selectedChild = panelApplication;
            }
      }
      

      private function init():void {
          var bootstrap:Bootstrap = new Bootstrap();
          bootstrap.execute();
      }
    ]]></mx:Script>

<mx:Style source="static/styles.css"/>
</mx:Application>
