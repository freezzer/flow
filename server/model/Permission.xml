<?xml version="1.0"?>
<define>

    <view package="permission.view" model="Permission" >

        <lister name="PermissionLister" label="Berechtigungen Auflister" model="Permission">
            <command use="LoadTableCommand" icon="refresh" label="Uebersicht Berechtigungen neu laden"/>
            <command use="OpenEditorCommand" editor="PermissionEditor" label="Berechtigung bearbeiten" icon="edit"/>
            <command use="DeleteBoCommand" label="Berechtigung loeschen" icon="delete"/>

            <column path="userName" label="Name" searchable="true"/>
            <column path="context" label="Bereich" searchable="true"/>
        </lister>

        <editor name="PermissionEditor" model="Permission" label="Berechtigung fuer {userName}">
            <panel use="default" path="." label="Switches" x="10" y="10" gap="3" />

            <command use="SaveBoCommand" label="Berechtigung speichern" icon="save"/>
            <command use="LoadBoCommand" label="Berechtigung laden" icon="refresh"/>
        </editor>

    </view>

</define>




