<?xml version="1.0"?>
<!DOCTYPE define SYSTEM "model.dtd">

<define>



    <!--     *********************   Persistenz *******************************                -->



    <model package="bom">
        <bean name="Person" persistent="true" unique-key="vorname+nachname" >
            <field name="vorname"/>
            <field name="nachname"/>
            <field name="telefon"/>
            <field name="email"/>
            <collection name="adressen" create="1">
                <bean name="Adresse">
                    <field name="land" />
                    <field name="ort"/>
                    <field name="plz"/>
                    <field name="strasse"/>
                    <field name="hausnummer"/>
                </bean>
            </collection>
        </bean>
    </model>


      <permission package="permission" name="Person">

            <view package="view.person" >
            <!--     *********************   Auflister  ****************************    -->

            <lister name="PersonLister" label="Personen Auflister" type="Person">
                <command use="LoadTableCommand" icon="refresh" label="Uebersicht Personen neu laden"/>
                <command use="OpenEditorCommand" editor="PersonEditor" label="Person bearbeiten" icon="edit" default="true"/>
                <command use="DeleteBoCommand" label="Person loeschen" icon="delete"/>
                <command use="OpenNewEditorCommand" editor="PersonEditor" label="neue Person anlegen" />

                <column path="vorname" label="Vorname" searchable="true"/>
                <column path="nachname" label="Nachname" searchable="true"/>
                <!--<column path="adressen.Adresse[1]/ort" label="1. Adresse" searchable="true"/>-->
            </lister>
            </view>

            <!--     *********************   Editor  *******************************    -->


          <view package="view.person" >
            <tree_editor name="PersonEditor" label="Daten von {nachname} " type="Person">
                <tree_node label="Person" path="." type="Person" icon="user" open="true" panel="default">
                    <tree_node label="Adressen" path="adressen" icon="table" open="true" type="Adresse"
                               lister="default">
                        <command use="CreateNodeCommand" label="neue Adresse" icon="new"/>
                        <tree_node label="Adresse {ort}" path="adressen" icon="form" open="true" type="Adresse"
                                   panel="AdressePanel">
                            <command use="CreateNodeCommand" label="neue Adresse" icon="new"/>
                            <command use="CopyNodeCommand" label="Adresse kopieren" icon="copy"/>
                            <command use="DeleteNodeCommand" label="Adresse loeschen" icon="delete"/>
                        </tree_node>
                    </tree_node>
                </tree_node>

                <command use="SaveBoCommand" label="Person speichern" icon="save"/>
                <command use="LoadBoCommand" label="Person laden" icon="refresh"/>
                <command use="DeleteBoCommand" label="Person loeschen" icon="delete"/>
            </tree_editor>

            <!--     *********************   Panel   *******************************    -->

            <panel name="AdressePanel" border="true" editable="true" x="10" y="10" w="650" h="600">
                <input x="10" y="20" w="300" labelwidth="100" label="Ort" path="ort" />
                <input x="10" y="49" w="300" labelwidth="100" label="Plz" path="plz" />
                <input x="10" y="81" w="300" labelwidth="100" label="Strasse" path="strasse" />
                <input x="10" y="113" w="300" labelwidth="100" label="Land" path="land" default="Deutschland"/>
                
                <google_map x="10" y="147" w="625" h="440" countryField="land" cityField="ort" streetField="strasse" zipField="plz" />
            </panel>
          </view>
     </permission>
</define>




